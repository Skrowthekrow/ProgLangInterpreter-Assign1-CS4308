// test_SCL.scl
function sum_of_squares(n: integer): integer
begin
  set result = 0
  set i = 1
  while i <= n
  begin
    set result = result + i * i
    set i = i + 1
  end
  return result
endfun

function main()
begin
  set num = 5
  set answer = call sum_of_squares(num)
  display "Sum of squares from 1 to ", num, " is: ", answer
endfun
